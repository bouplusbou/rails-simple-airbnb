<h2>All our flats (<%= @flats.count %>) </h1>
<div class="container">
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card">
          <div class="card_content">
            <h3 class="card_name"> <%= flat.name %> </h3>
            <p class="card_adress"> <%= flat.address %> </p>
          </div>
          <div class="card_picto">
            <p class="card_guests"><i class="fas fa-users"></i> <%= flat.number_of_guests %> </p>
            <p class="card_price"><i class="fas fa-euro-sign"></i> <%= flat.price_per_night %> </p>
          </div>
          <div class="card_link">
            <%= link_to "More info", flat_path(flat) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



